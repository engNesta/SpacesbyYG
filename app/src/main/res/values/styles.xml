<!-- res/values/styles.xml -->
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Make the status bar transparent -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Allow the window content to be drawn behind the status bar -->
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Optional: Remove action bar if not needed -->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Custom Date Text Appearance -->
    <style name="CustomDateTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">#FFFFFF</item> <!-- White color -->
        <item name="android:textSize">16sp</item>
    </style>


    <!-- Custom Weekday Text Appearance -->
    <style name="CustomWeekDayTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">#FFFFFF</item> <!-- White color -->
        <item name="android:textSize">14sp</item>
    </style>
    <!-- res/values/styles.xml -->
        <style name="BlackButtonStyle" parent="android:Widget.Button">
            <item name="android:background">@drawable/square_button</item>
            <item name="android:textColor">#FFFFFF</item>
            <item name="android:backgroundTintMode">src_over</item> <!-- This line should override tinting -->
        </style>

</resources>
