<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/spaces"
    android:gravity="center">

    <!-- CalendarView -->
    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="wrap_content"
        android:theme="@style/Theme.AppCompat"
        android:layout_height="wrap_content" />

    <!-- Time slots -->
    <LinearLayout
        android:id="@+id/timeSlotLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:visibility="gone">

        <Button
            android:id="@+id/morningSlotButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8:00 - 12:00"
            android:padding="8dp"
            android:layout_marginRight="15dp"
            android:backgroundTint="#8ED567" />

        <Button
            android:id="@+id/afternoonSlotButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13:00 - 18:00"
            android:padding="8dp"

            android:backgroundTint="#8ED567" />
    </LinearLayout>


    <!-- Continue button -->
    <Button
        android:id="@+id/continueButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FortsÃ¤tta"
        android:layout_marginTop="16dp"
        android:enabled="false" />

    <!-- Back to Rooms button -->
    <Button
        android:id="@+id/backToRoomsButton"
        android:layout_width="match_parent"
        android:backgroundTint="#8ED567"
        android:layout_height="wrap_content"
        android:text="Tillbaka till rum"
        android:layout_marginTop="6dp" />
</LinearLayout>