<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bookingCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:backgroundTint="#2E2E2E"> <!-- Dark background for card -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- User Name -->
        <TextView
            android:id="@+id/userNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AnvÃ¤ndarnamn"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#FFFFFF" /> <!-- White text -->

        <!-- Room -->
        <TextView
            android:id="@+id/roomTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rum"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="#CCCCCC" /> <!-- Light gray text -->

        <!-- Date and Time -->
        <TextView
            android:id="@+id/dateTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datum och tid"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="#CCCCCC" /> <!-- Light gray text -->

        <!-- Status with green color for accent -->
        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="#6FBF73" /> <!-- Green text for status -->

    </LinearLayout>

</androidx.cardview.widget.CardView>
