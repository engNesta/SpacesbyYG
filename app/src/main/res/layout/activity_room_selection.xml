<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spaces"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="35dp"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vilken Rum"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="15dp"
        android:textSize="28sp"/>

    <ImageView
        android:layout_width="295dp"
        android:layout_height="154dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/confrence"/>

    <Button
        android:id="@+id/conferenceRoomButton"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:textStyle="bold"
        android:text="Conference"
        android:layout_marginBottom="35dp"
        android:backgroundTint="#8ED567" />

    <ImageView
        android:layout_width="295dp"
        android:layout_height="154dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/creative"/>

    <Button
        android:id="@+id/creativeRoomButton"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:textStyle="bold"
        android:text="Creative"
        android:layout_marginBottom="35dp"
        android:backgroundTint="#8ED567" />

    <Button
        android:id="@+id/continueButton"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="FortsÃ¤tta"
        android:backgroundTint="#8ED567"
        android:layout_marginTop="16dp"
        android:enabled="false" /> <!-- Disabled initially -->
    </LinearLayout>
</RelativeLayout>
